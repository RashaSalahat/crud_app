        <!-- form handling -->
        <form action="/" method="POST">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Describtion</th>
                        <th>Type</th>
                        <th>stores</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <%- include('includegame/_show'); -%>
                </tbody>
            </table>
        </form>
        <!--<%=games%> this command will print users in the api ,we have the info of the users in show file-->
