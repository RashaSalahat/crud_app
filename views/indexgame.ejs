<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/add-game" class="border-shadow">
                <span class="text-gradient">New Game <i class="fas fa-user"></i></span>
            </a>
