<!-- form handling -->
<!-- in the action we're going to post the url of the routes methods -->
<!--which means when the user clicks on save btn we want to redirct him to /api/users which leads to routes methods-->
<form action="/api/games" method="POST" id="add_game">
    <div class="new_game">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Toyyyy">
        </div>
        <div class="form-group">
            <label for="Describtion" class="text-light">Describtion</label>
            <input type="text" name="describtion" value="" placeholder="This toy is for 3 years old">
        </div>
        <div class="form-group">
            <label for="Type" class="text-light">Type</label>
            <input type="text" name="type" value="" placeholder="Social">
        </div>
        <div class="form-group">
            <label for="Stores" class="text-light">Stores</label>
            <input type="text" name="stores" value="" placeholder="Toys R US">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
